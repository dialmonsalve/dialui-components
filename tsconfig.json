{
  "compilerOptions": {
    "baseUrl": "/home/dialmonsalve/Documents/Programacion/Javascript/React/MyComponents/",
    "paths": {
      "@/*": ["src/*"],
      "@/components": ["src/dev/components/*", "src/dev/components/index"],
      "@/styles": ["src/styles/*", "src/styles/index"],
      "@/types": ["src/types/*", "src/types/index"],
      "@/hooks": ["src/hooks/*", "src/hooks/index"],
      "@/helpers": ["src/helpers/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
